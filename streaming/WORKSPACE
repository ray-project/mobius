workspace(name = "com_github_ray_streaming")

# LOAD RAY WORKSPACE
load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive", "http_file")
ray_version = "b8d0cb31ae452ad72817b78661a48887e6cab264"
# Lastest ray version 2.9.3.
http_archive(
        name="com_github_ray_project_ray",
        strip_prefix = "ray-{}".format(ray_version),
        urls = ["https://github.com/ray-project/ray/archive/{}.zip".format(ray_version)],
        sha256 = "d2a234814adb3469fa6e85670e3d107b06c5fdc194e03447d13fc32a3ea28e53",
)

